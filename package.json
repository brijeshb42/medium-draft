{
  "name": "medium-draft",
  "version": "2.0.0-next",
  "description": "A medium like rich text editor built upon draft-js with an emphasis on eliminating mouse usage by adding relevant keyboard shortcuts",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "typings": "lib/cjs/index.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "webpack-dev-server --mode development --host=0.0.0.0 --port=8080 --hot --inline",
    "clean": "rm -rf lib dist local docs",
    "dist": "webpack --mode production",
    "build:esm": "tsc --declaration --outDir ./lib/esm --target es6 --module es6",
    "build": "npm run clean && tsc --declaration && npm run build:esm && npm run dist && npm run docs && npm run moveFiles",
    "moveFiles": "rm dist/index.js && cp dist/index.css lib/cjs && cp dist/index.css lib/esm",
    "local": "mkdir -p local && cp -r lib dist package.json local",
    "docs": "rm -rf docs && typedoc --excludePrivate --excludeProtected --out docs --mode modules --name 'Medium Draft'",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brijeshb42/medium-draft.git"
  },
  "keywords": [],
  "author": "Brijesh Bittu <brijesh@bitwiser.in> (http://bitwiser.in/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/brijeshb42/medium-draft/issues"
  },
  "homepage": "https://github.com/brijeshb42/medium-draft#readme",
  "devDependencies": {
    "@types/draft-js": "0.10.27",
    "@types/memoize-one": "4.1.0",
    "@types/prismjs": "1.9.0",
    "@types/react": "16.8.2",
    "@types/react-dom": "16.8.0",
    "@types/webpack-env": "1.13.7",
    "css-loader": "2.1.0",
    "draft-js-prism-plugin": "0.1.3",
    "html-webpack-plugin": "3.2.0",
    "mini-css-extract-plugin": "0.5.0",
    "node-sass": "4.11.0",
    "optimize-css-assets-webpack-plugin": "5.0.1",
    "prismjs": "1.15.0",
    "react": "16.8.1",
    "react-dom": "16.8.1",
    "sass-loader": "7.1.0",
    "style-loader": "0.23.1",
    "ts-loader": "5.3.3",
    "typedoc": "0.13.0",
    "typescript": "3.3.1",
    "webpack": "4.29.2",
    "webpack-cli": "3.2.3",
    "webpack-dev-server": "3.1.14"
  },
  "dependencies": {
    "draft-js": "0.10.5",
    "memoize-one": "5.0.0"
  },
  "peerDependencies": {
    "react": "^0.14.0 || ^15.0.0-rc || ^16.0.0-rc || ^16.0.0",
    "react-dom": "^0.14.0 || ^15.0.0-rc || ^16.0.0-rc || ^16.0.0"
  }
}
